
@model FinancialDashboard.ViewModels.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row mx-auto w-100">
    @*Ynab Credit Card Section*@
    <div class="col-lg-6 my-2 d-block mx-auto">
        <h2>YNAB Credit Cards</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.LiabilityAccount[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LiabilityAccount[0].Balance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LiabilityAccount[0].APR)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.LiabilityAccount)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Balance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.APR)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @*Ynab Cash Accounts Section*@
    <div class="col-lg-6 my-2 d-block mx-auto">
        <h2>YNAB Asset Accounts</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AssetAccount[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AssetAccount[0].Balance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AssetAccount[0].APR)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AssetAccount)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Balance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.APR)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    @*All Dates Card*@
    <div class="card col-lg-4">
        <div class="card-body">
            <h5 class="card-title">All Dates</h5>
            <p>
                Average Monthly Expenses: @Html.DisplayFor(model => model.CurrentStatus.OverallMonthlyExpenses)
            </p>
            <p>
                Average Monthly Income: @Html.DisplayFor(model => model.CurrentStatus.OverallMonthlyIncome)
            </p>
        </div>
    </div>
    @*Last Three Months Average Card*@
    <div class="card col-lg-4">
        <div class="card-body">
            <h5 class="card-title">Last Three Months</h5>
            <p>
                Average Expenses: @Html.DisplayFor(model => model.CurrentStatus.ThreeMonthsExpenses)
            </p>
            <p>
                Average Income : @Html.DisplayFor(model => model.CurrentStatus.ThreeMonthsIncome)
            </p>
        </div>
    </div>
    @*Current Month Total Card*@
    <div class="card col-lg-4">
        <div class="card-body">
            <h5 class="card-title">Current Month</h5>
            <p>
                Spending To Date: @Html.DisplayFor(model => model.CurrentStatus.CurrentMonthSpending)
            </p>
            <p>
                Income to Date: @Html.DisplayFor(model => model.CurrentStatus.CurrentMonthIncome)
            </p>
        </div>
    </div>
    @*Next Month's Projections Card*@
    <div class="card col-lg-4">
        <div class="card-body">
            <h5 class="card-title">Next Month</h5>
            <p>
                Projected Spending: @Html.DisplayFor(model => model.GoalStatus.NextMonthSpending)
            </p>
            <p>
                @Html.DisplayNameFor(model => model.CurrentStatus.ProjectedMonthlyIncome): @Html.DisplayFor(model => model.CurrentStatus.ProjectedMonthlyIncome)
            </p>
        </div>
    </div>
    @*Asset Totals Card*@
    <div class="card col-lg-4">
        <div class="card-body">
            <h5 class="card-title">Assets</h5>
            <p>
                Liquid Cash on Hand: @Html.DisplayFor(model => model.CurrentStatus.CashOnHand)
            </p>
            <p>
                Totals in Retirement Accounts: @Html.DisplayFor(model => model.CurrentStatus.RetirementAccounts)
            </p>
        </div>
    </div>
    @*Credit Card Totals Card*@
    <div class="card col-lg-4">
        <div class="card-body">
            <h5 class="card-title">Credit Cards</h5>
            <p>
                @Html.DisplayNameFor(model => model.CurrentStatus.TotalDebt): @Html.DisplayFor(model => model.CurrentStatus.TotalDebt)
            </p>
            <p>
                @* todo add Display name for value to cc payments *@
                @* todo verify calculations *@
                @Html.DisplayNameFor(model => model.CurrentStatus.TotalCCPayments): @Html.DisplayFor(model => model.CurrentStatus.TotalCCPayments)
            </p>
            @* add goal payoff timeline entry *@
        </div>
    </div>
    @*Summary Card*@
    <div class="card col-lg-12">
        <div class="card-body">
            <h5 class="card-title">Summary</h5>
            <p>
                Overall : @Html.DisplayFor(model => model.CurrentStatus.NetWorth)
            </p>
        </div>
    </div>

</div>




