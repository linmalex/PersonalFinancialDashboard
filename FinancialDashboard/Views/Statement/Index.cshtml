@model FinancialDashboard.ViewModels.StatementViewModel

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@Model.AccountNameSort">
                    @Html.DisplayNameFor(model => model.Statement[0].AccountName)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@Model.LastPaymentSort">
                    @Html.DisplayNameFor(model => model.Statement[0].LastStatementDate)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@Model.MinPaymentSort">
                    @Html.DisplayNameFor(model => model.Statement[0].StatementMinPayment)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@Model.BalanceSort">
                    @Html.DisplayNameFor(model => model.Statement[0].StatementBalance)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@Model.PaymentDueSort">
                    @Html.DisplayNameFor(model => model.Statement[0].PaymentDueDate)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@Model.LastPaymentSort">
                    @Html.DisplayNameFor(model => model.Statement[0].LastPaymentDate)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@Model.AutopayScheduledSort">
                    @Html.DisplayNameFor(model => model.Statement[0].AutoPayScheduled)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@Model.AutopayScheduledSort">
                    @Html.DisplayNameFor(model => model.Statement[0].StatementPaid)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Statement)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastStatementDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatementMinPayment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatementBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentDueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastPaymentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutoPayScheduled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatementPaid)
            </td>
            <td>
                <a asp-action="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
